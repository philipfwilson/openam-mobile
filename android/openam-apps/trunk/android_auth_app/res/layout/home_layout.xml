<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/login_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/about_forgerock_img"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/forgerock_logo"
            android:contentDescription="@string/about_forgerock" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_marginTop="5dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_native"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    />

            <Button
                    android:id="@+id/home_login_native_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_button" />

            <Button
                    android:id="@+id/home_logout_native_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_button" />

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_web"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    />

            <Button
                    android:id="@+id/home_login_web_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_button" />

            <Button
                    android:id="@+id/home_clear_local_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_clear_local" />

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_sso_token"
            android:textStyle="italic|bold"
            android:layout_marginTop="5dp"
            />

    <TextView
            android:id="@+id/login_sso_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

</LinearLayout>